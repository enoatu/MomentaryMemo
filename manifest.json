{
    "name": "MomentaryMemo",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Write in a moment!",
    "browser_action": {
        "default_icon": "/img/icon.png",
        "default_title": "MomentaryMemo",
        "default_popup": "main.html"
    },
    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "js": [
                "build/main.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "background": {
        "scripts": ["js/background.js"]
    }
}
